{
  "manifest_version": 3,
  "description": "US Accent + Better UI",
  "default_locale": "en",
  "name": "Improved Google Translate",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "offscreen",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "bubble_compiled.js"
      ],
      "css": [
        "bubble_gss.css"
      ],
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "main_compiled.js"
  },
  "version": "2.0.15",
  "action": {
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    },
    "default_title": "Improved Google Translate",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "popup_css_compiled.css",
        "fonts/Vazir/*.woff2",
        "fonts/Vazir/*.woff"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "options_page": "options.html",
  "minimum_chrome_version": "115",
  "icons": {
    "16": "icons/16.png",
    "19": "icons/19.png",
    "32": "icons/32.png",
    "38": "icons/38.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "author": {
    "email": "google-translate-chrome-extension-owners@google.com"
  }
}